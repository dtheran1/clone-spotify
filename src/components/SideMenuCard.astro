---
import { colors } from "@/lib/colors";
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;

const { id, cover, title, color, artists } = playlist;

const artistString = artists.join(", ");
---

<a
  href={`/playlist/${id}`}
  class="playlist-item flex relative p-2 overflow-hidden itemcen gap-5 rounded-md hover:bg-zinc-800">
  <picture class="size-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>

  <div class="flex flex-auto flex-col truncate">
    <h4 class="text-white text-sm">{title}</h4>
    <span class="text-xs text-gray-400">{artistString}</span>
  </div>
</a>
